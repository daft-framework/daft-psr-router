{
	"name": "daft-framework/daft-psr-router",
	"description": "PSR-based variant of signpostmarv/daft-router",
	"type": "library",
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "SignpostMarv",
			"email": "me@signpostmarv.name"
		}
	],
	"autoload": {
		"psr-4": {
			"DaftFramework\\DaftRouter\\": [
				"./src/"
			]
		}
	},
	"autoload-dev": {
		"psr-4": {
			"DaftFramework\\DaftRouter\\": [
				"./tests/"
			]
		}
	},
	"config": {
		"classmap-authoritative": true,
		"sort-packages": true
	},
	"scripts": {
		"tests": [
			"phpunit",
			"infection --min-msi=100",
			"psalm --show-info=false",
			"@static-analysis"
		],
		"static-analysis": [
			"phpcpd src tests",
			"composer-require-checker check ./composer.json",
			"php-cs-fixer fix --verbose --allow-risky=yes --dry-run --diff-format=udiff"
		]
	},
	"conflict": {
		"vimeo/psalm": "<3.15"
	},
	"suggest": {
		"vimeo/psalm": "Useful for static analysis to reduce runtime type checks etc."
	},
	"require": {
		"php": "^7.4",
		"ext-mbstring": "*",
		"nikic/fast-route": "^1.3",
		"psr/http-message": "^1.0",
		"psr/http-server-handler": "^1.0",
		"psr/http-server-middleware": "^1.0",
		"signpostmarv/daft-interface-collector": "^2.4"
	},
	"require-dev": {
		"infection/infection": "^0.20.2",
		"maglnet/composer-require-checker": "^2.1",
		"php-coveralls/php-coveralls": "^2.4",
		"phpunit/phpunit": "^9.5",
		"psalm/plugin-phpunit": "^0.15.0",
		"roave/security-advisories": "dev-master",
		"sebastian/phpcpd": "^6.0",
		"signpostmarv/php-cs-fixer-config": "^0.19.0",
		"vimeo/psalm": "^4.3"
	}
}
